<div>

  <h3>Formulario de Editar</h3>

  <form action="/profile/{{details._id}}/edit" method="POST">
    <div>
      <img id="user-photo">
      <button type="button" id="btn-foto">Subir foto</button>
    </div>

    <label for="firstName">Nombre:</label>
    <input type="text" name="firstName" value="{{details.firstName}}" />
    <br />
    <label for="lastName">Apellidos:</label>
    <input type="text" name="lastName" value="{{details.lastName}}" />
    <br />
    <label for="email">Email:</label>
    <input type="text" name="email" value="{{details.email}}" />
    <br />
    <label for="username">Nombre de Usuario:</label>
    <input type="text" name="username" value="{{details.username}}"/>
    <br />
    <label for="password">Contrase√±a:</label>
    <input type="password" name="password" />
    <br />

    <p style="color: rgb(60, 11, 151)">{{errorMessage}}</p>

    <button>Editar</button>

  </form>

</div>
<div>

  <h3>Editar mi perfil</h3>

  <form action="/profile/{{details._id}}/edit" method="POST">
    <div class="row">
      <div class="col">
        <input
          type="text"
          name="firstName"
          value="{{details.firstName}}"
          class="form-control"
          aria-label="Nombre"
        />
      </div>
      <div class="col">
        <input
          type="text"
          name="lastName"
          value="{{details.lastName}}"
          class="form-control"
          placeholder="Apellido"
          aria-label="Apellido"
        />
      </div>
    </div>
    <br />
    <div class="mb-3">

      <input
        type="email"
        name="email"
        value="{{details.email}}"
        class="form-control"
